<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MusicMinds"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/connection_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connecting to Spotify..."
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_title"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/track_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ready for music learning"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/connection_status"
        android:layout_marginTop="24dp" />

    <!-- Main action button - prominently placed -->
    <Button
        android:id="@+id/startFlashcardButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Start Flashcard Session"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="32dp"
        android:paddingVertical="12dp"
        android:backgroundTint="#1DB954"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/track_info" />

    <!-- Secondary buttons in a row -->
    <Button
        android:id="@+id/addSongsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Songs"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/libraryButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/startFlashcardButton" />

    <Button
        android:id="@+id/libraryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Library"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addSongsButton"
        app:layout_constraintTop_toBottomOf="@id/startFlashcardButton" />

    <TextView
        android:id="@+id/instructions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Make sure Spotify is installed and you're logged in.\n\nUse 'Add Songs' to build your library, organize in 'My Library', then start learning with flashcard sessions!"
        android:textSize="12sp"
        android:textAlignment="center"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>